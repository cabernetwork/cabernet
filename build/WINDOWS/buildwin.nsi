    SetOutPath "$INSTDIR"
    ; CreateShortCut "$DESKTOP\cabernet.lnk" "$INSTDIR\tvh_main.py"
    !insertmacro MUI_STARTMENU_WRITE_END
SectionEnd

Section "Windows Service" SEC03
    SetOutPath "$INSTDIR"
